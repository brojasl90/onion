
@{
//ViewBag.Title = "Error";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="bg-light bg-opacity-75 p-3 rounded border border-1 border-danger mx-lg-5 shadow-lg">
                <div class="mt-2 mb-5 text-center">
                    <h2 class="text-danger">@ViewBag.Title</h2>
                    <hr class="border border-danger" />
                </div>

                <div>
                    <p class="text-md-center">@ViewBag.Description</p>
                </div>
                <div class="mb-2 mt-5 text-md-center">
                    @Html.ActionLink("Regresar", (String)ViewBag.redirectAction, (String)ViewBag.redirect, null, new { @class = "btn btn-danger btn-lg rounded" })
                </div>
            </div>
        </div>
    </div>
</div>