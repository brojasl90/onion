@model IEnumerable<Infrastructure.Models.Proveedor>

@{
    ViewBag.Title = "Lista de Proveedores";
}

<h2>@ViewBag.Title</h2>

<div class="col-md-12 d-md-flex justify-content-md-end pb-3 pe-3">
    <i class='bx bxs-pencil'></i>
    @Html.ActionLink("Nuevo Proveedor", "Create")
</div>
<div class="table-responsive">
    <table class="table table-light table-hover table-striped">
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Proveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dsc_Proveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Contacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="align-middle">
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_Proveedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dsc_Proveedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_Contacto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { pId = item.IdProveedor }) |
                    @Html.ActionLink("Detalles", "Details", new { pId = item.IdProveedor }) @*
                        @Html.ActionLink("Borrar", "Delete", new { /* id=item.PrimaryKey */ *@
                </td>
            </tr>
        }
    </table>
</div>
