@model IEnumerable<Infrastructure.Models.Proveedor>

@{
    ViewBag.Title = "Lista de Proveedores";
}

<div class="form-group">
    <div class="row">
        <div class="col-4">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="col-4">
            <div class="btn btn-outline-secondary">
                <i class='bx bxs-pencil'></i>
                @Html.ActionLink("Nuevo", "Create", null, htmlAttributes: new { @class = "text-decoration-none" })
            </div>
        </div>
        <div class="col-4 mx-0 px-0 justify-content-md-end">
            <form class="d-flex">
                <input class="form-control p-0 ps-2" type="search" placeholder="Buscar..." aria-label="Buscar...">
                <button class="btn btn-outline-primary mx-3 my-sm-0 p-1 col-3" type="submit"><i class='bx bx-search-alt-2'></i>Buscar</button>
            </form>
        </div>        
    </div>
</div>


<div class="table-responsive">
    <table class="table table-light table-hover table-striped">
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Proveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dsc_Proveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Contacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="align-middle">
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_Proveedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dsc_Proveedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_Contacto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { pId = item.IdProveedor }) |
                    @Html.ActionLink("Detalles", "Details", new { pId = item.IdProveedor }) @*
                        @Html.ActionLink("Borrar", "Delete", new { /* id=item.PrimaryKey */ *@
                </td>
            </tr>
        }
    </table>
</div>
