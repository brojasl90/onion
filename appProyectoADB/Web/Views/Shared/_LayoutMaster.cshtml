<!DOCTYPE html>

<html lang="es" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    <style>

        body {
            background-color: #DDD8EC;
        }

        .marco {
            background-color: #DDD8EC;
            padding: 15px;
        }

        .general {
            background-color: #ffffff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
            border-radius: 12px;
            padding: 20px;
        }

    </style>

    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

</head>
<body class="bg-primary">
    <nav class="navbar shadow-sm navbar-expand-lg navbar-dark bg-primary p-0">
        <div class="container-fluid">
            <a class="navbar-brand" href='@Url.Action("Index", "Home")'><img src="~/img/tiendaBG.png" class="mx-auto d-block" /><span>Almacen Del Barrio</span></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    @*<li class="nav-item">
                <img src="~/img/casa.png" class="mx-auto d-block" />
                @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })
            </li>*@
                    <li class="nav-item">
                        <img src="~/img/bolsa.png" class="mx-auto d-block" />
                        @Html.ActionLink("Productos", "Index", "Producto", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <img src="~/img/edificio.png" class="mx-auto d-block" />
                        @Html.ActionLink("Proveedores", "Index", "Proveedor", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <img src="~/img/dinero.png" class="mx-auto d-block" />
                        @Html.ActionLink("Movimientos", "Index", "Inventario", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <img src="~/img/usuarios.png" class="mx-auto d-block" />
                        @Html.ActionLink("Usuarios", "Index", "Usuario", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <img src="~/img/info.png" class="mx-auto d-block" />
                        @Html.ActionLink("Acerca de", "About", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <img src="~/img/lock.png" class="mx-auto d-block" />
                        @Html.ActionLink("Cerrar sesión", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                </ul>
                <div class="profile w-25 bg-secondary p-1 rounded-1 shadow-lg">
                    <div class="profile-details d-flex align-items-center">
                        <div class="text-white p-2 fs-4">
                            <i class='bx bxs-user'></i>
                        </div>
                        <div class="w-75 text-sm-center text-white px-2 m-1">
                            <div class="name">Nombre Usuario</div>
                            <div class="rol">Perfil Usuario</div>
                        </div>
                        <div class="bg-primary text-light p-2 rounded">
                            <i class='bx bx-log-out'></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <main>
        <div class="marco">
            <div class="general container-fluid">
                @RenderBody()
            </div>
        </div>
    </main>
    <footer class="page-footer shadow bg-primary text-white text-center">
        @Html.Partial("_Footer")
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap_almacen.min.css")
    @RenderSection("scripts", required: false)
</body>
</html>
