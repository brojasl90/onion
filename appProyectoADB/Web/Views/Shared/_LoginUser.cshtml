<!DOCTYPE html>

<html lang="es" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Almac&eacute;n Del Barrio</title>

    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)

    <style>

        body {
            background-color: #DDD8EC;
        }

        .marco {
            background-color: #DDD8EC;
            padding: 15px;
        }

        .general {
            background-color: #ffffff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
            border-radius: 12px;
            padding: 20px;
        }
    </style>

    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

</head>
<body class="bg-primary">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary bg-gradient">
        <a class="navbar-brand" href='@Url.Action("Index", "Login")'><img src="~/img/tiendaBG.png" class="mx-auto" /><span class="align-middle mx-1">Almac&eacute;n Del Barrio</span></a>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item align-baseline text-light fs-3">
                    |
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Acceso al sistema", "Index", "Login", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
    <main>
        <div class="marco">
            <div class="general container-fluid">
                @RenderBody()
            </div>
        </div>
    </main>
    <footer class="page-footer shadow bg-primary bg-gradient text-white text-center mt-auto py-1">
        @Html.Partial("_Footer")
    </footer>

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/popper")

    @Scripts.Render("~/bundles/jqueryui")

    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/sweetalert")

    @RenderSection("scripts", required: false)
    @if (ViewBag.NotificationMessage != null)
    {
        <script>
            @Html.Raw(@ViewBag.NotificationMessage);
        </script>
    }
</body>
</html>
