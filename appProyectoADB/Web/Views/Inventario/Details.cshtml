@model Infrastructure.Models.GestionInventario

@{
    ViewBag.Title = "Vista Detalles";
    ViewBag.SubTitle = "Información del inventario:";
}

<h2>@ViewBag.Title </h2>

<div>
    <h4>@ViewBag.SubTitle</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IdGestionInventario)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdGestionInventario)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdUsuario)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdUsuario)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario.Nombre)
            @Html.DisplayFor(model => model.Usuario.PrimerApellido)
            @Html.DisplayFor(model => model.Usuario.SegundoApellido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TipoGestion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoGestion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdTipMovimiento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdTipMovimiento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TipoMovimiento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoMovimiento.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CantidadProductoGestionado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CantidadProductoGestionado)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UsuarioGestion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UsuarioGestion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaGestion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaGestion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Producto)
        </dt>

        <dd>
            <ul>
                @foreach (var item in Model.Producto)
                {
                    <li>@item.Nombre_Producto</li>
                }
            </ul>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { pId = Model.IdGestionInventario }) |
    @Html.ActionLink("Regresar", "Index")
</p>
<div class="form-group">
    <hr />
    <div class="row">
        <div class="col-12 d-md-flex justify-content-md-end">
            <div class="btn btn-outline-secondary m-1">
                <i class='bx bxs-x-circle'></i>
                @Html.ActionLink("Regresar", "Index", null, htmlAttributes: new { @class = "text-decoration-none" })
            </div>
            <div class="btn btn-outline-secondary m-1">
                <i class='bx bx-check'></i>
                @Html.ActionLink("Editar", "Edit", new { pId = Model.IdGestionInventario }, htmlAttributes: new { @class = "text-decoration-none" })
            </div>
        </div>
    </div>
</div>